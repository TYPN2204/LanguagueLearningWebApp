{
    "name": "LanguagueLearningWebApp Codespace",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/mssql:1": {
            "version": "latest",
            "saPassword": "yourStrong(!)Password"
        }
    },
    "forwardPorts": [5000, 5001],
    "portsAttributes": {
        "5001": {
            "label": "Backend API",
            "onAutoForward": "openBrowser"
        }
    },
    "postCreateCommand": "dotnet dev-certs https --trust"
}
